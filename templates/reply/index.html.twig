{% extends 'back.html.twig' %}

{% block labo %}
    <h1>Reply index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reponse</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reply in replies %}
            <tr>
                <td>{{ reply.id }}</td>
                <td>{{ reply.reponse }}</td>
                <td>{{ reply.nom }}</td>
                <td>
                    <a href="{{ path('app_reply_show', {'id': reply.id}) }}">show</a>
                    <a href="{{ path('app_reply_edit', {'id': reply.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reply_new') }}">Create new</a>
{% endblock %}
